<Window x:Class="Chirag_Art.dead_stock"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="dead_stock" Height="400" Width="711" WindowStartupLocation="CenterScreen">
    <Grid>
        <Button Content="Display" VerticalAlignment="Top" Margin="298,16,331,0" Click="Display_click" Height="23"/>
        <DataGrid x:Name="DeadStock" HorizontalAlignment="Left" VerticalAlignment="Top" Height="222" Width="627" Margin="41,58,0,0" ItemsSource="{Binding}"/>
        <Button Content="Close" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="593,16,0,0" Click="Close_Click" Height="23"/>
        <TextBox x:Name="days" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="173,16,0,0"/>
        <Label Content="Number of dead days:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="46,13,0,0"/>
    </Grid>
</Window>
